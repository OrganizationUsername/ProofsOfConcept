<Window x:Class="LuggerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuggerWPF"
        mc:Ignorable="d"
        Title="ItemsPoC" Height="450" Width="800" Topmost="True"
        ResizeMode="NoResize">
    <Window.DataContext>
        <local:MainVm/>
    </Window.DataContext>
    <StackPanel>
        <DockPanel >
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem Width="100">
                    <TextBlock Text="Yo"/>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem Width="100">
                    <TextBlock Text="Another"/>
                </StatusBarItem>
            </StatusBar>
            <ListView 
                DockPanel.Dock="Left" 
                ItemsSource="{Binding Path=Items}" 
                SelectedValue="{Binding Path=SelectedItem}" 
                Width="200"
                Height="390">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="{Binding Path=Name}" DockPanel.Dock="Left"/>
                            <TextBlock Text=": "/>
                            <TextBlock Text="{Binding Path=Percent}" DockPanel.Dock="Right"/>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackPanel DockPanel.Dock="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name: "/>
                    <TextBox Text="{Binding Path=SelectedItem.Name}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Value: "/>
                    <TextBox Text="{Binding Path=SelectedItem.Percent}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="assad"/>
            </StackPanel>
            <StackPanel>
                <Canvas>
                    <Canvas.Resources>
                        <DataTemplate DataType="{x:Type local:Rectangle}">
                            <Rectangle
                                Fill="Red" 
                                Canvas.Left="{Binding X}" 
                                Canvas.Top="{Binding Y}" 
                                Width="{Binding Width}" 
                                Height="{Binding Height}" />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type local:Circle}">
                            <Ellipse 
                                Fill="Blue" 
                                Canvas.Left="{Binding X}" 
                                Canvas.Top="{Binding Y}" 
                                Width="{Binding Radius}" 
                                Height="{Binding Radius}" />
                        </DataTemplate>
                    </Canvas.Resources>
                </Canvas>
